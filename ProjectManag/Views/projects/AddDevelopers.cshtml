@model IEnumerable<ProjectManag.Models.Developers>
@using ProjectManag.Models

@{
    ViewBag.Title = "AddDevelopers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddDevelopers</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Developer Id")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.Email)
        </th>
        <th>
            @Html.DisplayName("Skills")
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.country)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Skills)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.country)
            </td>



            <td>
                @Html.ActionLink("ADD", "AddDeveloper", new { id = item.developerID })

            </td>

            <td>
                @Html.ActionLink("Back", "AddDevelopers", new { id = item.developerID })

            </td>
        </tr>
    }

</table>
