@using Microsoft.AspNet.Identity
@using ProjectManag.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Home Page</title>
    <style>
        .section.main-sidebar {
            right: 0:
        }
    </style>

    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/admin-lte/css/ionicons.min.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link href="~/admin-lte/css/rtl/bootstrap.min.css" rel="stylesheet">

    <!-- not use this in ltr -->
    <link href="~/admin-lte/css/rtl/bootstrap.rtl.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="~/admin-lte/css/plugins/metisMenu/metisMenu.min.css" rel="stylesheet">

    <!-- Timeline CSS -->
    <link href="~/admin-lte/css/plugins/timeline.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/admin-lte/css/rtl/sb-admin-2.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="~/admin-lte/css/plugins/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/admin-lte/css/font-awesome/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to get the
desired effect
|---------------------------------------------------------|
| SKINS         | skin-blue                               |
|               | skin-black                              |
|               | skin-purple                             |
|               | skin-yellow                             |
|               | skin-red                                |
|               | skin-green                              |
|---------------------------------------------------------|
|LAYOUT OPTIONS | fixed                                   |
|               | layout-boxed                            |
|               | layout-top-nav                          |
|               | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->
<body class="hold-transition skin-blue sidebar-mini" style="padding-top:0px;">

    
    <!-- Header Navbar -->

    <div class="navbar-default sidebar" role="navigation">
        <div class="sidebar-nav navbar-collapse">
            <ul class="nav" id="side-menu">


                <img src="@Url.Action("UserPhotos", "Home" )" class="img-circle" alt="ser Image" style="width:100px ; height :100px" />

                <!-- /input-group -->

                <li>
                    @Html.Partial("_UserInfo")

                </li>

                <li >
                    @{
                        
                        var UserId = User.Identity.GetUserId();
                        ApplicationDbContext db = new ApplicationDbContext();
                        var user = db.Users.Find(UserId);
                        if (user.UserType == "Client")
                        {
                            
                                @Html.ActionLink("Create New Project", "CustomerCreate")
                            
                        }
                    }
                </li>




                <li style="color:chocolate; font-weight:bold ;background-color:aquamarine ;font-size:medium">@Html.ActionLink("Projects", "CustomerIndex", "projects")</li>
                <!--jd-->
                <li style="color:chocolate; font-weight:bold ;background-color:lavenderblush ;font-size:medium ; direction:ltr">
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()


                    <button style="width:150px; margin-right:40px;background-color:azure;height:40px;border-radius:40%;"><a href="javascript:document.getElementById('logoutForm').submit()">Log Off</a>  </button> 

                        }
                        
                    }


                </li>





            </ul>
        </div>
        <!-- /.sidebar-collapse -->
    </div>
    <div id="page-wrapper" style="min-height: 351px;">
        <div class="row">
            @RenderBody()
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- REQUIRED JS SCRIPTS -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/admin-lte/js")
    @Scripts.Render("~/bundles/fullcalendar")
    @RenderSection("scripts", required: false)
    <!-- Optionally, you can add Slimscroll and FastClick plugins.
         Both of these plugins are recommended to enhance the
         user experience. -->
    <script>
        //bootstrap WYSIHTML5 - text editor
        $(".textarea").wysihtml5();
    </script>
    <script src="~/admin-lte/js/jquery-1.11.0.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/admin-lte/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/admin-lte/js/metisMenu/metisMenu.min.js"></script>

    <!-- Morris Charts JavaScript -->
    <script src="~/admin-lte/js/raphael/raphael.min.js"></script>
    <script src="~/admin-lte/js/morris/morris.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/admin-lte/js/sb-admin-2.js"></script>
</body>
</html>


